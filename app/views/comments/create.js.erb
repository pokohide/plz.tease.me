<% if @err %>
  <% @comment.errors.full_messages.each do |message| %>
    alertify.error('<%= message %>');
  <% end %>
<% else %>
  $('#comment_body').val('');
  $('.no-comment').fadeOut(1000);
  var html = "<%= j(render partial: 'comments/comment', locals: { comment: @comment, slide: @slide }) %>"
  $('.comments').prepend(html)
<% end %>
